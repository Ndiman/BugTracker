    <script>
     var url = '@Url.Action("Unassigned_Data", "Dashboard")'
        $.post(url).then(function (response) {
            FusionCharts.ready(function () {
                var revenueChart = new FusionCharts({
                    type: 'doughnut3d',
                    renderAt: 'ticketDonutChartContainer',
                    width: '480',
