                    dataFormat: 'json',
                    dataSource: {
                        "chart": {
                            //"caption": "Unassigned Tickets",
                            //"subCaption": "by Project",
                            "use3DLighting": "1",
                            "enableSmartLabels": "1",
                            "startingAngle": "270",
                            "showLabels": "1",
                            "showLegend": "1",
                            "centerLabelBold": "1",
                            "showTooltip": "1",
                            "useDataPlotColorForLabels": "1",
                            "theme": "fint"
                        },
                        "data": response.Data
                    }
                });
                revenueChart.render();
            });
        });

