                <div class="x_content">
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        @if (User.IsInRole("Developer"))
                        {
                            <div class="x_title">
                                <h2>Notifications</h2>
                                <div class="clearfix"></div>
                            </div>
