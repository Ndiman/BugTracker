@model BugTracker.Models.LoginViewModel
@using System.Web.Configuration;


@{
    var demoPassword = WebConfigurationManager.AppSettings["DemoUserPassword"];
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Demo Logins</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height:600px;">
                <div class="x_title">
                    <h2>Select a Role to Demo </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- price element -->
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="pricing">
                                    <div class="title">
                                        <br />
                                        <h3>Demo Admin</h3>
                                    </div>
                                    <div class="x_content">
                                        <div class="">
                                            <div class="pricing_features">
                                                <ul class="list-unstyled text-left">
                                                    <li><i class="fa fa-check text-success"></i> Assign Roles to Users</li>
                                                    <li><i class="fa fa-check text-success"></i> View <strong>all</strong> Projects</li>
                                                    <li><i class="fa fa-check text-success"></i> Create Projects</li>
                                                    <li><i class="fa fa-check text-success"></i> Edit <strong>any</strong> Project</li>
                                                    <li><i class="fa fa-check text-success"></i> Assign Users to <strong>any</strong> Projects</li>
                                                    <li><i class="fa fa-check text-success"></i> Close Projects</li>
                                                    <li><i class="fa fa-times text-danger"></i> Create Tickets</li>
                                                    <li><i class="fa fa-check text-success"></i> View Ticket Details <strong>for any Ticket</strong></li>
                                                    <li><i class="fa fa-check text-success"></i> Edit Tickets</li>
                                                </ul>
                                                <br />
                                            </div>
                                        </div>
                                        <div class="pricing_footer">
                                            @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("Email", WebConfigurationManager.AppSettings["AdminEmail"])
                                                @Html.Hidden("Password", demoPassword)
                                                <button type="submit" class="btn btn-primary btn-block">Login as Demo Admin</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- price element -->
                            <!-- price element -->
